{
  "$id":
  "https://schemas.ory.sh/kratos/selfservice/strategy/ldap/login.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "csrf_token": {
      "type": "string"
    },
    "ldap_password": {
      "type": "string",
      "minLength": 1
    },
    "ldap_identifier": {
      "type": "string",
      "minLength": 1
    },
    "method": {
      "type": "string"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "method": {
            "const": "password"
          }
        },
        "required": [
          "method"
        ]
      },
      "then": {
        "required": [
          "ldap_password"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "password_identifier": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "password_identifier"
        ]
      },
      "then": {
        "required": [
          "password_identifier"
        ]
      },
      "else": {
        "required": [
          "ldap_identifier"
        ]
      }
    }
  ]
}
